<h1><%=t 'courses.list' -%></h1>

<table>
  <tr>
    <th><%=t 'courses.name' -%></th>
    <th><%=t 'par' -%></th>
    <th><%=t 'courses.description' -%></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= link_to h(course.name), course %></td>
    <td><%=h course.par %></td>
    <td><%=h course.description %></td>
  </tr>
<% end %>
</table>
